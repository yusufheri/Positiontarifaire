<div class="card card-box">
    <div class="card-head">
        <header>Création d'un compte</header>
        <button type="button"  class="close" data-dismiss="modal"  aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="card-body " id="bar-parent">
        <div id="message"></div>       
        <form method="post" id="formCompte">
            <input type="hidden" name="token" value="{{ csrf_token('security') }}" />
            <div class="form-group">
                <label for="simpleFormEmail">Code</label>
                <input type="text" class="form-control" id="code" placeholder="Sasir un code pour ce compte" name="code">
            </div>
            <div class="form-group">
                <label for="simpleFormPassword">Libellé</label>
                <input type="text" class="form-control" id="name" placeholder="L'intitulé du compte" name="name">
            </div>
            <div class="form-group">
                <label for="">Description</label>
                <textarea name="content" id="content" class="form-control" rows="4" placeholder="Laisser un commentaire "></textarea>
            </div>
            <button type="button" class="btn btn-circle btn-default m-b-10" id="btnCancel"><i class="fa fa-trash"></i> Annuler</button>
            <button type="submit" class="btn btn-circle btn-primary float-right m-b-10" id="btnSave"><i class="fa fa-check"></i> Enregistrer</button>
        </form>
    </div>
</div>